<body>

	<div id="wrapper">

				<!-- Main -->
					<section id="main">
						<header>
							<a href="/"><span class="avatar"><img src="/static/img/avatar.png" alt=""></span></a>
							<h1>My ToDos</h1>
						</header>
						<footer>
							<div>
								<div>
									<div>
										<button type="button" class="btn btn-dark" data-toggle="collapse" data-target="#tlist" aria-expanded="false" aria-controls="tlist">
											Create a new ToDo List
										</button>
										<p></p>
										<div class="collapse" id="tlist">
											<form action="/" method="POST">
												<input type="text" name="content" placeholder="Type the name of your list..." required>
												<br/><br/>
												<div class="input_fields_wrap">
													<div>
														<input type="text" name="content" placeholder="Type the name of your task..." required><button class="remove_field"><span class="fa fa-remove"></span></button>
														<br/><br/>
													</div>
												</div>
												<button class="add_field_button"><span class="fa fa-plus">Task</span></button>
												<button type="submit"><span class="fas">Submit</span></button>
											</form>	
										</div>
